@page
@model Web.Pages.Budgets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Budgets</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Incomings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Income Type Description</th>
                    <th>Value</th>
                    <th>Currency</th>
                </tr>
                @foreach (var item in Model.Budget.Incomings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValueCurrency.ShortCode)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Outgoings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Expenditure Type Description</th>
                    <th>Value</th>
                    <th>Currency</th>
                </tr>
                @foreach (var item in Model.Budget.Outgoings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValueCurrency.ShortCode)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Budget.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
